<!DOCTYPE html>
<html lang="es" class="h-100">

<head>
    <!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del head -->
    <%- include('./partials/head.ejs',{titulo: 'PROFESORES'})  %>
</head>

<body class="d-flex flex-column h-100" >
    <header>
        <!-- Se incluye el documento parcial donde se almacena la codificacion de 
        la parte del encabezado -->
        <%- include('./partials/navProfesores.ejs')  %>
    </header>
    <main class="flex-shrink-0">
        <div class="container">
            <!-- Botón de agregar alumnos -->
            <p class="mt-3">
                <a href="/profesor?accion=nuevo" class="btn btn-outline-dark">Nuevo Profesor</a>
            </p>
            <!-- Tabla que muestra todos los alumnos -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col">DNI</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellidos</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Correo</th>
                            <th scope="col">Sexo</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Almacena en la tabla todos los alumnos que se encuentren en la base de
                        datos -->
                        <% data.forEach(function(data) { %>
                            <tr  scope="row" id="fila-<%= data.idProfesor %>">
                                <th><%= data.DNI %></th>
                                <td><%= data.nombreProfesor %></td>
                                <td><%= data.apellidoProfesor %></t>
                                <td><%= data.direccion %></td>
                                <td><%= data.telefono %></td>
                                <td><%= data.email %></td>
                                <td><%= data.sexo ? 'Masculino':'Femenino' %></td>
                                <td>
                                    <a href="/profesor?accion=editar&idProfesor=<%= data.idProfesor %>"
                                        class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i></a>
                                    <a href="javascript:eliminarProfesor(<%= data.idProfesor %>,'<%= data.DNI %>')"
                                        class="btn btn-outline-danger btn-sm"><i class="fas fa-eraser"></i></a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>

        </div>
    </main>

<!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del pie de página y scripts -->
    <%- include('./partials/footer.ejs')  %>
    <script src="/js/profesores.js"></script>
</body>