<!DOCTYPE html>
<html lang="es" class="h-100">

<head>
    <!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del head -->
    <%- include('./partials/head.ejs',{titulo: accion.toString().toUpperCase()})  %>
</head>

<body class="d-flex flex-column h-100">
    <header>
        <!-- Se incluye el documento parcial donde se almacena la codificacion de 
        la parte del encabezado -->
        <%- include('./partials/navProfesores.ejs')  %>
    </header>
    <main class="flex-shrink-0">
        <div class="container">
            <!-- Condicional para definir el contenido de la página
                según el tipo de acción -->
            <% if (accion === 'nuevo') { %>
            <!-- formulario para poder ingresar un nuevo profesor a la base de datos -->
            <h2 class="mt-3">Nuevo Profesor</h2>
            <form action="/profesor/guardar" method="post" encType="multipart/form-data">
                <!-- carga la estructura del formulario en formato ejs -->
                <%- include('./frm-profesor.ejs')  %>
            </form>

            <% }else if (accion === 'editar'){%>
            <!-- formulario para poder editar la información de un profesor a la base de datos -->
            <h2 class="mt-3">Editar Profesor</h2>
            <form action="/profesor/editar" method="post" encType="multipart/form-data">
                <!-- carga la estructura del formulario en formato ejs -->
                <%- include('./frm-profesor.ejs',{data: data[0]}) %>
            </form>

            <% }else {%>
            <h1>Acción no válida</h1>
            <% }%>
        </div>
    </main>
    <!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del pie de página y scripts -->
    <%- include('./partials/footer.ejs')  %>
</body>

</html>