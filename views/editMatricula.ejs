<!DOCTYPE html>
<html lang="es" class="h-100">

<head>
    <!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del head -->
    <%- include('../partials/head.ejs','Editar Matricula')  %>
</head>

<body class="d-flex flex-column h-100">
    <header>
        <!-- Se incluye el documento parcial donde se almacena la codificacion de 
        la parte del encabezado -->
        <%- include('../partials/nav.ejs')  %>
    </header>
    <main class="flex-shrink-0">
        <div class="container">
            <h2 class="mt-3">Editar Matricula</h2>

            <form action="editMatricula" method="post">
                <!-- Datos necesarios para agregar la matricula-->
                <div class="row" style="margin-top: 20px;">
                    <div class="col"></div>
                    <div class="col-5">
                        <label for="Alumno" class="form-label">Alumn@</label>
                        
                        <input style="display: none;" value="<%= dataMatricula[0].idInscripcion%>" type="text" class="form-control" id="idMatricula" name="idMatricula">
                        <input style="display: none;" value="<%= dataMatricula[0].idAlumno%>" type="text" class="form-control" id="idAlumno" name="idAlumno">

                        <select disabled class="form-select" aria-label="Default select example">
                            <option value="<%= dataMatricula[0].idAlumno %> " selected><%= dataMatricula[0].alumno %></option>
                        </select>
                    </div>
                    <div class="col-5">
                        <label for="Aula" class="form-label">Horarios</label>
                        <select name="idHorario" class="form-select" aria-label="Default select example">
                            <option value="<%= dataMatricula[0].idHorario%>" selected><%=dataMatricula[0].descripcion%>-<%=dataMatricula[0].nombreAula%></option>
                        <% dataHorarios.forEach(function(dataHorarios) {
                            if (dataHorarios.idHorario!=dataMatricula[0].idHorario) {%>
                                <option value="<%=dataHorarios.idHorario%>"><%=dataHorarios.descripcion%>-<%=dataHorarios.nombreAula%></option>
                        <% }}) %>
                        </select>
                    </div>
                    <div class="col"></div>
                </div>

                <hr>
                <div class="row mt-3" style="margin-bottom: 20px;">
                    <div class="col"></div>
                    <div class="col-5 d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </div>
                    <div class="col-5 d-grid gap-2">
                        <a href="/adminMatricula" class="btn btn-outline-dark">Regresar</a>
                    </div>
                    <div class="col"></div>
                </div>
            </form>
           
        </div>
    </main>
    <!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del pie de pÃ¡gina y scripts -->
    <%- include('../partials/footer.ejs')  %>

</body>

</html>