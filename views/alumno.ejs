<!DOCTYPE html>
<html lang="es" class="h-100">

<head>
    <!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del head -->
    <%- include('./partials/head.ejs',{titulo: accion.toString().toUpperCase()})  %>
</head>

<body class="d-flex flex-column h-100">
    <header>
        <!-- Se incluye el documento parcial donde se almacena la codificacion de 
        la parte del encabezado -->
        <%- include('./partials/nav.ejs')  %>
    </header>
    <main class="flex-shrink-0">
        <div class="container">
            <!-- Condicional para definir el contenido de la página
                según el tipo de acción -->
            <% if (accion === 'nuevo') { %>

            <h2 class="mt-3">Nuevo Alumno</h2>
            <form action="/alumno/guardar" method="post" encType="multipart/form-data">
                <div class="row mt-3">
                    <label for="sampleFile" class="form-label">Foto de Perfíl</label>
                    <input class="form-control" type="file" id="sampleFile" name="sampleFile">
                </div>
                <%- include('./frm-alumno.ejs')  %>
            </form>

            <% }else if (accion === 'editar'){%>

            <h2 class="mt-3">Editar Alumno</h2>
            <form action="/alumno/editar" method="post" encType="multipart/form-data">
                <div class="row mt-3">
                    <label for="sampleFile" class="form-label">Foto de Perfíl</label>
                    <input class="form-control" type="file" id="sampleFile" name="sampleFile">
                </div>
                <%- include('./frm-alumno.ejs',{data: data[0]}) %>
            </form>

            <% }else {%>
            <h1>Acción no válida</h1>
            <% }%>
        </div>
    </main>
    <!-- Se incluye el documento parcial donde se almacena la codificacion de 
    la parte del pie de página y scripts -->
    <%- include('./partials/footer.ejs')  %>
    <script src="/mc-calendar/mc-calendar.min.js"></script>
    <script src="/js/alumno.js"></script>

</body>

</html>