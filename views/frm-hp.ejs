<div class="row mt-3">
    <div class="col">
        <label for="idAula" class="form-label">Aulas</label>
        <select name="idAula" id="idAula" class="form-select" required>
            <option value="" disabled>Seleccione una aula</option>
            <% data.aulas.forEach(function(data) {%>
            <option value="<%= typeof data.idAula != 'undefined' ? data.idAula :'error'  %>">
                <%= typeof data.nombreAula != 'undefined' ? data.nombreAula :'error'  %>
            </option>
            <% }); %>
        </select>
    </div>
    <div class="col">
        <label for="idMateria" class="form-label">Materias</label>
        <select name="idMateria" id="idMateria" class="form-select" required>
            <option value="" selected disabled>Seleccione una materia</option>
            <% data.materia.forEach(function(data) {%>
            <option value="<%= typeof data.idMateria != 'undefined' ? data.idMateria :'error'  %>">
                <%= typeof data.nombreMateria != 'undefined' ? data.nombreMateria :'error'  %>
            </option>
            <% }); %>
        </select>
    </div>
    <div class="col">
        <label for="idProfesor" class="form-label">Profesores</label>
        <select name="idProfesor" id="idProfesor" class="form-select" required>
            <option value="" selected disabled>Seleccione un profesor</option>
            <% data.profesores.forEach(function(data) {%>
            <option value="<%= typeof data.idProfesor != 'undefined' ? data.idProfesor :'error'  %>">
                <%= typeof data.nombreProfesor != 'undefined' ? (data.nombreProfesor +' '+data.apellidoProfesor) :'error'  %>
            </option>
            <% }); %>
        </select>
    </div>
</div>
